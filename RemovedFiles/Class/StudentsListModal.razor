@page "/modal"
<div class="modal fade show" style="display: block; background-color: rgba(10, 10, 10, 0.8);" aria-modal="true" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"></h4>
                <button type="button" class="close"
                        @onclick="@Ok">
                    &times;
                </button>
            </div>
            <div class="modal-body">
                @*<div class="modal-dialog" role="document">*@
                    <div class="modal-content rounded-4 shadow">
                        <div class="modal-body p-5">
                            <h2 class="fw-bold mb-0">Students</h2>
                            <ul class="d-grid gap-4 my-5 list-unstyled">
                                <li class="d-flex gap-4">
                                    <div>
                                        <h5 class="mb-0">Siavash Nabipour</h5>
                                        +9892252122188
                                    </div>
                                </li>
                                <li class="d-flex gap-4">
                                    <div>
                                        <h5 class="mb-0">Hadis Rajabi</h5>
                                        +52118596554551
                                    </div>
                                </li>
                                <li class="d-flex gap-4">
                                    <div>
                                        <h5 class="mb-0">Faramarz</h5>
                                        +563226262656
                                    </div>
                                </li>
                            </ul>
                        </div>
                    @*</div>*@
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-lg btn-primary mt-5 w-100" @onclick="@Ok">Great, thanks!</button>
            </div>
        </div>
    </div>
</div>
@code {
    [Parameter] 
    public EventCallback<bool> OnClose { get; set; }
    private Task Ok()
    {
        return OnClose.InvokeAsync(false);
    }

}

