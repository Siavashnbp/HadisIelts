@using HadisIelts.Client.Features.Correction.Models;
<div class="container">
    <div class="row">
        <InputFile class="form-control" type="file" OnChange="async (e)=>await OnFileIsLoaded.InvokeAsync(e)" accept=".docx" 
            style="margin-left:10px;" multiple/>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public EventCallback<InputFileChangeEventArgs> OnFileIsLoaded { get; set; }

}
