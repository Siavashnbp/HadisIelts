@using HadisIelts.Client.Features.Correction.Models;
@using static HadisIelts.Shared.Enums.FileRelatedEnums;
<div class="container">
    <div class="row">
        <InputFile class="form-control" type="file" OnChange="async (e)=>await OnFileIsLoaded.InvokeAsync(e)" accept=".docx" multiple 
            style="margin-left:10px;"/>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public EventCallback<InputFileChangeEventArgs> OnFileIsLoaded { get; set; }

}
